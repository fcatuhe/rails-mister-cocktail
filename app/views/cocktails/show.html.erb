<% content_for :title do %>
  <%= @cocktail.name %>
<% end %>

<div class="row">

  <div class="col-sm-8">
    <h1><%= @cocktail.name %>
      <%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_cocktail_path(@cocktail) %>
      <%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" } %>
    </h1>

    <% if @cocktail.photo? %>
      <%= cl_image_tag @cocktail.photo.path, width: 500, crop: :fill %>
    <% end %>

    <ul>
      <% @cocktail.doses.each do |dose| %>
        <% if dose.persisted? %>
          <li>
            <%= dose.ingredient.name %> - <%= dose.description %>
            <%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_dose_path(dose) %>
            <%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>

  <div class="col-sm-4">
    <div style="padding-top: 20px">
      <h4>Add ingredients</h4>
      <div class="well">
        <%= render 'doses/form', dose_tables: [@cocktail, @dose] %>
      </div>
    </div>
  </div>

</div>
